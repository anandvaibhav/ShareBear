<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageSplashIgnite"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/ambassadors_logo" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/textSplashMrDeveloper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:paddingBottom="10dp"
        android:text="Mr. Developer"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageSplashMrDeveloper"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/textSplashMrDeveloper"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mrdeveloper_black" />

    <TextView
        android:id="@+id/textSplashCreatedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageSplashMrDeveloper"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-thin"
        android:text="Created by"
        android:textSize="12sp" />

</RelativeLayout>